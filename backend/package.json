{
  "name": "scholarfinder-backend",
  "version": "1.0.0",
  "description": "Backend API for ScholarFinder manuscript analysis and peer reviewer recommendation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:with-tests": "npm run build && npm run test:with-reports",
    "build:ci": "npm run build && npm run test:ci",
    "build:enhanced": "node scripts/build-with-reports.js",
    "build:enhanced:ci": "node scripts/build-with-reports.js --ci",
    "build:enhanced:fast": "node scripts/build-with-reports.js --fail-fast",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:unit": "jest --testPathPattern=unit --runInBand",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "test:performance": "jest --testPathPattern=performance --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false --runInBand --passWithNoTests",
    "test:with-reports": "node scripts/run-tests-with-reports.js",
    "test:comprehensive": "node scripts/run-comprehensive-tests.js",
    "test:comprehensive:fast": "node scripts/run-comprehensive-tests.js --fail-fast",
    "test:enhanced": "node scripts/run-enhanced-tests.js",
    "test:enhanced:fast": "node scripts/run-enhanced-tests.js --fail-fast",
    "test:enhanced:verbose": "node scripts/run-enhanced-tests.js --verbose",
    "test:report": "npm run test:report:generate",
    "test:report:generate": "node scripts/generate-test-reports.js --verbose",
    "test:report:generate:ci": "node scripts/generate-test-reports.js --ci --silent",
    "test:report:generate:verbose": "node scripts/generate-test-reports.js --verbose",
    "test:report:html": "node scripts/generate-test-reports.js --format=html --verbose",
    "test:report:markdown": "node scripts/generate-test-reports.js --format=markdown --verbose",
    "test:report:json": "node scripts/generate-test-reports.js --format=json --verbose",
    "test:report:all": "node scripts/generate-test-reports.js --format=all --verbose",
    "test:report:quick": "node scripts/generate-test-reports.js --format=json --silent",
    "posttest": "node scripts/post-test-hook.js --test-type=general",
    "posttest:unit": "node scripts/post-test-hook.js --test-type=unit",
    "posttest:integration": "node scripts/post-test-hook.js --test-type=integration",
    "posttest:e2e": "node scripts/post-test-hook.js --test-type=e2e",
    "posttest:performance": "node scripts/post-test-hook.js --test-type=performance",
    "posttest:coverage": "node scripts/post-test-hook.js --test-type=coverage",
    "posttest:ci": "node scripts/post-test-hook.js --test-type=ci --silent",
    "pretest:report": "echo 'ðŸ“‹ Preparing to generate test reports...'",
    "validate:build-integration": "node scripts/validate-build-integration.js",
    "validate:reports": "npm run test:report:generate && echo 'âœ… Report generation validation passed'",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "studio": "prisma studio"
  },
  "keywords": [
    "manuscript",
    "peer-review",
    "academic",
    "research"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/markdown-it": "^14.1.2",
    "@types/multer": "^2.0.0",
    "@types/redis": "^4.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "markdown-it": "^14.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "natural": "^8.1.0",
    "officegen": "^0.6.5",
    "pdf-parse": "^1.1.1",
    "prisma": "^5.7.1",
    "redis": "^5.8.2",
    "stopword": "^3.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/natural": "^5.1.5",
    "@types/node": "^20.10.4",
    "@types/pdf-parse": "^1.1.5",
    "@types/stopword": "^2.0.3",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "artillery": "^2.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
