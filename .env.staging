# Staging Environment Configuration
# This file contains staging-specific environment variables

# API Configuration
VITE_API_BASE_URL="https://staging-api.scholarfinder.com"
VITE_API_TIMEOUT="30000"
VITE_API_RETRY_ATTEMPTS="3"
VITE_API_RETRY_DELAY="1500"

# File Upload Configuration
VITE_MAX_FILE_SIZE="10485760"
VITE_SUPPORTED_FILE_TYPES="pdf,docx,doc,txt"
VITE_UPLOAD_CHUNK_SIZE="1048576"

# Authentication Configuration
VITE_JWT_STORAGE_KEY="scholarfinder_token_staging"
VITE_TOKEN_REFRESH_THRESHOLD="300000"

# Feature Flags
VITE_ENABLE_DEV_TOOLS="true"
VITE_ENABLE_QUERY_DEVTOOLS="true"
VITE_ENABLE_DEBUG_LOGGING="true"
VITE_ENABLE_PERFORMANCE_MONITORING="true"

# Cache Configuration
VITE_CACHE_STALE_TIME="300000"
VITE_CACHE_GC_TIME="900000"

# UI Configuration
VITE_PAGINATION_DEFAULT_SIZE="20"
VITE_TOAST_DURATION="5000"
VITE_DEBOUNCE_DELAY="300"

# Staging-specific settings
VITE_ENABLE_API_MOCKING="false"